    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
      <% for(listing of allListings){ %>
        <a href="/listings/<%=listing._id %>" class="listing-link">
          <div class="card" >
            <img class="card-img-top" style="height: 20rem" src="<%=listing.image.url %>" alt="Card image cap" >
            <div class="card-img-overlay"></div>          
            <div class="card-body">
              <p class="card-text">
                  <b><%= listing.title %></b> <br/>
                  &#8377;<%= Number(listing.price).toLocaleString("en-IN") %>/night
              </p>
            </div>
          </div>
        </a>
        <% } %>
    </div>

